
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->

    <link href="~/Content/css/mainlogin.css" rel="stylesheet" />
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Adient Ticket Giriş</title>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"> </div>
    
    </section>
   
    <section class="login-content">
        <div class="logo">
            <h1>Diniz Adient </h1>
            <h1> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Ticket</h1>

        </div>
       

        

        <div class="login-box">

            @using (Html.BeginForm("loginPage", "login", FormMethod.Post, new { @class = "login-form" }))
            {
                <a href="~/acilticket/hizliticket">  <h5 style="color:royalblue"> Hızlı Ticket ---> </h5></a>
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Giriş</h3>
                <div class="form-group">

                    <label class="control-label">KULLANICI ADI</label>
                    <input name="kuladi" class="form-control" type="text" placeholder="Kullanıcı Adı" autofocus>
                </div>
                <div class="form-group">
                    <label class="control-label">ŞİFRE</label>
                    <input name="sifre" class="form-control" type="password" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <div class="utility">
                        <p style="color:red">
                            @ViewBag.name
                        </p>
                        <p class="semibold-text mb-2"><a href="/yenikayit/Yenikayit" data-toggle="flip">Kaydol </a></p>
                    </div>
                </div>
                <div class="form-group btn-container">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>Giriş Yap</button>
                </div>



            }
        </div>

    </section>
  
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
  
    <script src="~/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
</body>
</html>