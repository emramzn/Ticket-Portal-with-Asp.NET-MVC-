                $(".modal-body #data-aciklama").html(my_id_value4);

                var my_id_value5 = $(this).attr('data-birim');
                $(".modal-body #data-birim").text(my_id_value5);

                var dataId = $(this).attr('data-id');
                $(".modal-body #data-idGet").val(dataId);




            })
        });
