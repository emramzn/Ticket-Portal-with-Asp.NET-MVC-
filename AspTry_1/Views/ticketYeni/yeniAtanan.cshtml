<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header" style="text-align:center">
        <h4 style="color:black">İşlemdeki Ticketler</h4>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Görevi Alan </th>
                        <th>İş Başlık</th>
                        <th>İçerik Açıklama</th>
                        <th>Tarih</th>
                        <th>Birim</th>
                        <th>Açan Personel</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Görevi Alan</th>
                        <th>İş Başlık</th>
                        <th>İçerik Açıklama</th>
                        <th>Tarih</th>
                        <th>Birim</th>
                        <th>Açan Personel</th>


                    </tr>
                </tfoot>
                <tbody>

                    @{
                        foreach (var item in Model)


                        {

                            <tr >

                                <td>

                                     
                                            <div style="margin-top:15px; margin-left:30px">
                                                <h5>@item.PersonelAdSoyad"</h5>
                                            </div>
                                   

                                </td>


                                <td>@item.isbaslik</td>
                                <td>
                                    
                                        @item.Aciklama
                                   
                                </td>
                                <td>@item.Tarih</td>
                                <td>@item.Birim</td>

                                <td>@item.PersonelAdSoyad</td>


                            </tr>


                        }


                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>




</div>
</div>
