
@model IEnumerable<AspTry_1.Models.Gorevler>

@{ Layout = null;}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Diniz Adient Ticket</title>

    <!-- Custom fonts for this template-->

    <link href="~/Content/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Page level plugin CSS-->

    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />

    <!-- Custom styles for this template-->

    <link href="~/Content/css/sb-admin.css" rel="stylesheet" />

</head>

<main class="app-content">

   <div class="row"  >
       <div class="col-md-2">
           @* <div ></div>*@
           <img src="~/adient_logo_new.png" alt="Alternate Text" style="background:red; width:250px; height:600px;" />
          
       </div>
   
    <div class="container" style="width:750px">
        <div class="card">
            
            <div class="card-body">



                <div class="col-md-10">

                    @using (Html.BeginForm("hizliticket", "acilticket", FormMethod.Post))
                    {

                        <div class="container">

                            <h3>Ticket Kaydı Oluştur</h3>
                            <hr />

                            <div class="form-group">
                                <label for="exampleInputEmail1">Ad - Soyad</label>
                                <input class="form-control" type="text" name="personelAdSoyad" value="" />

                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Birim Seçin </label>


                                <select name="birim" id="input" class="form-control">
                                    <option>Birim </option>
                                    <option>Bilgi islem</option>
                                    <option>Bakım</option>
                                    <option>Elektrik</option>
                                    <option>Makine</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Kısa Başlık </label>
                                <input class="form-control" type="text" name="baslik" value="" />
                            </div>

                            <div class="form-group">
                                <label for="exampleTextarea">Açıklama</label>
                                <textarea class="form-control" id="exampleTextarea" name="aciklama" rows="3"></textarea>
                            </div>

                            <div class="form-group">

                                <button type="submit" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Kaydı Oluştur</button>
                                <a href="/login/loginPage"><button type="button" class="btn btn-warning">Giriş Sayfası</button></a>
                            </div>

                        </div>

                    }
                    
               

                </div>

            </div>
        </div>

        </div>
        
    <div>
    @*</div>*@
    </div>

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
    </body>
</html>